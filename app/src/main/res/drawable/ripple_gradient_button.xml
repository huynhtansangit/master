<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/black">
    <item>
        <shape>
            <gradient
                android:startColor="@color/color_start"
                android:endColor="@color/color_end"/>
